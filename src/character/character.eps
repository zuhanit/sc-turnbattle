import skill.skill;
import skill.explorer as explorerSkill;
import skill.archer as archerSkill;
import skill.knight as knightSkill;
import skill.magician as magicianSkill;
import skill.robot as robotSkill;
import skill.witch as witchSkill;
import skill.warrior as warriorSkill;

object Character {
    var name;
    var unitID: TrgUnit;
    var skillID: skill.Skill;
    var description;
    var status;
};

const characterList = EUDArray(7);
var characterCount = 0;

function registerToArray(target) {
    characterList[characterCount] = target;
    characterCount++;
}

function registerCharacters() {
    const archer = Character.alloc();
    archer.name = EPD(Db("궁수"));
    archer.unitID = $U("Terran Ghost");
