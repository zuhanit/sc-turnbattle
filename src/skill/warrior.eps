import skill.skill;
import skill.detail;

var charSkillObject = 0;

function registerSkills() {
    const skill = skill.Skill.alloc();

    const qDetail = detail.Detail.alloc();
    qDetail.name = EPD(Db("둔화 덫"));
    qDetail.mp = 1;
    qDetail.description = EPD(Db("밟으면 2턴간 느려지는 덫을 설치합니다."));

    const wDetail = detail.Detail.alloc();
    wDetail.name = EPD(Db("지뢰 설치"));
    wDetail.mp = 1;
    wDetail.description = EPD(Db("2X2 범위에 20의 데미지를 주는 지뢰를 설치합니다."));

    const eDetail = detail.Detail.alloc();
    eDetail.name = EPD(Db("응급 치료"));
    eDetail.mp = 2;
    eDetail.description = EPD(Db("체력을 15 회복합니다."));

    const rDetail = detail.Detail.alloc();
    rDetail.name = EPD(Db("자연과의 동화"));
    rDetail.mp = 2;
    rDetail.description = EPD(Db("1턴간 은신합니다. 가까이 온 적은 자신을 발견할 수 있습니다."));

    skill.q = qDetail;
    skill.w = wDetail;
    skill.e = eDetail;
    skill.r = rDetail;

    charSkillObject = skill;
}